{
  "name": "node-mysql-clean-architecture",
  "version": "1.0.0",
  "description": "Node.js project with TypeScript, MySQL, Express, and TypeORM following Clean Architecture principles",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "test": "jest",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm migration:generate -- -d src/infrastructure/database/config/typeorm.config.ts",
    "migration:run": "npm run typeorm migration:run -- -d src/infrastructure/database/config/typeorm.config.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d src/infrastructure/database/config/typeorm.config.ts"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "mysql2": "^3.9.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
